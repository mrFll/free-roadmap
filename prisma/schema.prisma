// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lesson {
  id          Int        @id @default(autoincrement())
  name        String?
  description String
  resources   Resource[]
  exercises   Exercise[]
  course      Course     @relation(fields: [courseId], references: [id])
  courseId    Int
  weekNo      Int
}

model Resource {
  id          Int      @id @default(autoincrement())
  type        String   @default("url")
  url         String
  label       String
  description String?
  lessons     Lesson[]
  courses     Course[]
}

model Exercise {
  id          Int      @id @default(autoincrement())
  type        String   @default("url")
  url         String
  label       String
  description String?
  lessons     Lesson[]
}

model Course {
  id          Int        @id @default(autoincrement())
  name        String?
  description String
  lessons     Lesson[]
  resources   Resource[]
  color       String?
}
